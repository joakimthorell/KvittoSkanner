<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround_xxxhdpi"
    android:orientation="vertical"
    tools:context="corp.skaj.foretagskvitton.activites.AddNewPost">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="142dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/blue_circle_and_lines"
        app:layout_constraintBottom_toTopOf="@+id/rectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/dollar_sign"
        app:layout_constraintBottom_toTopOf="@+id/rectangle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="62dp"
        android:background="#99FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/colorMenu"
        app:bb_activeTabColor="@color/white"
        app:bb_inActiveTabColor="@color/colorMenuItem"
        app:bb_tabXmlResource="@xml/bottombar_tabs"
        app:bb_titleTextAppearance="@style/MyBottomBarStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/addFromCameraButton"
        style="@style/AddButtonStyle"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawableEnd="@drawable/ic_camera"
        android:onClick="cameraButtonActionPerformed"
        android:paddingBottom="30dp"
        android:paddingEnd="15dp"
        android:paddingStart="40dp"
        android:paddingTop="30dp"
        android:text="@string/camera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle" />

    <Button
        android:id="@+id/noPictureButton"
        style="@style/AddButtonStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="@string/no_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFromCameraButton" />

    <Button
        android:id="@+id/galleryButton"
        style="@style/AddButtonStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/gallery"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noPictureButton"
        app:layout_constraintVertical_bias="0.517" />

</android.support.constraint.ConstraintLayout>
