<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMenuItem"
    tools:context="corp.skaj.foretagskvitton.activities.singleReceipt">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="377dp"
        android:layout_height="488dp"
        app:srcCompat="@drawable/receipt_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571" />

    <TextView
        android:id="@+id/Category"
        android:layout_width="319dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorMenu"
        android:gravity="center"
        android:text="Representation"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        app:layout_constraintHorizontal_bias="0.52" />

    <TextView
        android:id="@+id/Company"
        android:layout_width="316dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Sanijs Päron AB"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.146"
        tools:layout_editor_absoluteX="36dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="55dp"
        android:text="2017-05-15"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorMenu"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/Supplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Grossist: Päronfrön Inc."
        android:textColor="@color/colorMenuItem"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/Category" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="8dp"
        android:text="350sek"
        android:textColor="@color/colorMenu"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintRight_toRightOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/Category"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Moms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="115dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Moms: 20%"
        android:textColor="@color/colorMenuItem"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:layout_constraintRight_toRightOf="@+id/imageView8" />

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:text="Betalt med: Privatkort"
        android:textColor="@color/colorMenuItem"
        app:layout_constraintTop_toBottomOf="@+id/Moms"
        android:layout_marginLeft="194dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/view_receipt"
        android:layout_width="97dp"
        android:layout_height="40dp"
        android:background="@color/colorMenu"
        android:scrollHorizontally="false"
        android:text="Kvitto"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintLeft_toRightOf="@+id/view_comments"
        android:layout_marginLeft="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.275"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Category"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/view_comments"
        android:layout_width="122dp"
        android:layout_height="40dp"
        android:background="@color/colorMenu"
        android:text="Kommentarer"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="101dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        tools:layout_editor_absoluteX="97dp" />

</android.support.constraint.ConstraintLayout>
