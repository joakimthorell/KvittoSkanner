<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="corp.skaj.foretagskvitton">

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".services.DataHandler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Getting permission to internal harddrive -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="corp.skaj.foretagskvitton.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".activities.InitApplicationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.InitWizardActivity" />
        <activity android:name=".activities.AddReceiptActivity" />
        <activity android:name=".activities.GraphActivity" />
        <activity
            android:name=".activities.WizardActivity"
            android:theme="@style/WizardTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="corp.skaj.foretagskvitton.activities.AddReceiptActivity" />
        </activity>
        <activity
            android:name=".activities.CompanyActivity"
            android:theme="@style/WizardTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="corp.skaj.foretagskvitton.activities.CompanyListActivity" />
        </activity>
        <activity android:name=".activities.UserActivity" />
        <activity android:name=".activities.ArchiveActivity" />
        <activity android:name=".activities.CompanyListActivity" />
        <activity android:name=".activities.ArchiveReceiptActivity" />
        <activity android:name=".activities.ArchiveReceiptComments" />
        <activity android:name=".activities.ArchiveReceiptPicture" />
        <activity android:name=".activities.MainActivity"></activity>
    </application>

</manifest>